<% if @expense.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody').append(' <%= j render "row", expense: @expense %>');
  $('.alert-success').html("New expense created successfully").show();
  $('#product-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @expense.errors.full_messages[0] %>');
<% end %>
